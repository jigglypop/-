{
  // 코드 실행시 terminal clear
  "code-runner.clearPreviousOutput": true,
  // 기본 터미널 실행 (표준 입력시 필요)
  "code-runner.runInTerminal": true,
  // 실행 코드 (chcp 65001 : 한글 깨짐 방지 설정)
  "code-runner.executorMap": {
    "cpp": "chcp 65001 && cd $dir && g++ $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt"
  },
  "files.associations": {
    "iostream": "cpp",
    "ostream": "cpp",
    "random": "cpp",
    "algorithm": "cpp",
    "array": "cpp",
    "initializer_list": "cpp",
    "utility": "cpp",
    "tuple": "cpp",
    "functional": "cpp",
    "atomic": "cpp",
    "*.tcc": "cpp",
    "cctype": "cpp",
    "clocale": "cpp",
    "cmath": "cpp",
    "cstdarg": "cpp",
    "cstddef": "cpp",
    "cstdint": "cpp",
    "cstdio": "cpp",
    "cstdlib": "cpp",
    "cstring": "cpp",
    "cwchar": "cpp",
    "cwctype": "cpp",
    "deque": "cpp",
    "unordered_map": "cpp",
    "vector": "cpp",
    "exception": "cpp",
    "iterator": "cpp",
    "memory": "cpp",
    "memory_resource": "cpp",
    "numeric": "cpp",
    "string": "cpp",
    "system_error": "cpp",
    "type_traits": "cpp",
    "fstream": "cpp",
    "iosfwd": "cpp",
    "istream": "cpp",
    "limits": "cpp",
    "new": "cpp",
    "sstream": "cpp",
    "stdexcept": "cpp",
    "streambuf": "cpp",
    "typeinfo": "cpp"
  }
}
